{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block content %}

    <form method="post">
        <div class="auth">
            <div class="container mt-1 mb-1 mt-5">
                <div class="row d-flex align-items-center justify-content-center">
                    <div class="col-md-6">

                        {% if error %}
                            <div class="alert alert-danger"> Numéro ou mot de passe invalide </div>
                        {% endif %}

                        <div class="card px-5">
                            <h5 class="mt-3">Join over 25 million <br> learners from</h5> <small class="mt-2 text-muted">Master </small>
                            <div class="form-input">
                                <i class="bi bi-telephone-fill"></i>
                                <input type="text" value="{{ last_username }}" name="phone" id="inputPhone" class="form-control2 form-control" autocomplete="username" required autofocus placeholder="Téléphone">
                            </div>
                            <div class="form-input">
                                <i class="bi bi-key-fill"></i>
                                <input type="password" name="password" id="inputPassword" class="form-control2 form-control" autocomplete="current-password" required placeholder="Mot de passe">
                            </div>
                            <div class="d-grid gap-2 col-8 mx-auto">
                                <button class="btn btn-primary" type="submit">Se connecter</button>
                            </div>

                            <div class="text-center mt-3"> <span>Ou se connecter avec</span> </div>
                            <div class="d-flex justify-content-center mt-4"> <span class="social"><i class="bi bi-google"></i></span> <span class="social"><i class="bi bi-facebook"></i></span> <span class="social"><i class="bi bi-twitter"></i></span> <span class="social"><i class="bi bi-linkedin"></i></span> </div>
                            <div class="text-center mt-4"> <span>Pas inscrit</span> <a href="{{ path('register') }}" class="text-decoration-none">S'inscrire</a> </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >

            {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
            #}


    </form>
{% endblock %}
