{% extends 'base.html.twig' %}

{% block title %}Patient index{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-9">
            <h2>liste des Patients</h2>
        </div>
        <div class="col-3">
                <div class="addpatient text-end">
                    <p class="text-end">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-person-plus-fill" viewBox="0 0 16 16">
                            <path d="M1 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H1zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z"/>
                            <path fill-rule="evenodd" d="M13.5 5a.5.5 0 0 1 .5.5V7h1.5a.5.5 0 0 1 0 1H14v1.5a.5.5 0 0 1-1 0V8h-1.5a.5.5 0 0 1 0-1H13V5.5a.5.5 0 0 1 .5-.5z"/>
                        </svg>
                        <a href="{{ path('patient_new') }}">Nouveau patient</a>
                    </p>
                </div>

        </div>
    </div>
<div class="table-responsive">
    <table class="table table-striped table-bordered table-sm">
        <caption>Liste de patients</caption>
        <thead class="table-warning">
        <tr>
            <th>Id</th>
            <th>Nom</th>
            <th>PostNon</th>
            <th>Age</th>
            <th>Sex</th>
            <th>Locale</th>
            <th>Lit</th>
            <th>DateAdmin</th>
            <th>Diagnotic</th>
            <th>Traitement</th>
            <th>Observation</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for patient in patients %}
            <tr>
                <td>{{ patient.id }}</td>
                <td>{{ patient.name }}</td>
                <td>{{ patient.middlemane }}</td>
                <td>{{ patient.age }}</td>
                <td>{{ patient.sex }}</td>
                <td>{{ patient.locale }}</td>
                <td>{{ patient.lit }}</td>
                <td>{{ patient.dateAdmin ? patient.dateAdmin|date('Y-m-d') : '' }}</td>
                <td>{{ patient.diagnotic }}</td>
                <td>{{ patient.traitement }}</td>
                <td>{{ patient.observation }}</td>
                <td>
                    <a href="{{ path('patient_show', {'id': patient.id}) }}">Voir</a> |
                    <a href="{{ path('patient_edit', {'id': patient.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

</div>
{% endblock %}
