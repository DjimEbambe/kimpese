<div class="auth">
    <div class="container mt-1 mb-1 mt-5">
        <div class="row d-flex align-items-center justify-content-center">
            <div class="col-md-6">
                <div class="card px-5">
                    <h5 class="mt-3">Join over 25 million <br> learners from</h5>
                    {{ form_start(form) }}
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-input form-floating">
                                {{ form_widget(form.name, {'attr': {'class': 'form-control form-control-sm',  'placeholder':'Nom'}}) }}
                                <label for="patient_name">Nom</label>
                                <div class="form-error fst-italic">
                                    {{ form_errors(form.name) }}
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-input form-floating">
                                {{ form_widget(form.middlemane, {'attr': {'class': 'form-control',  'placeholder':'PostNom'}}) }}
                                   <label for="patient_middlename">Post Nom</label>
                                <div class="form-error fst-italic">
                                    {{ form_errors(form.middlemane) }}
                                </div>
                            </div>
                        </div>
                        <div id="passwordHelpBlock" class="form-help text-center">
                            4-30 caractères, pas de caractères spéciaux ou d'emoji.
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-4">
                            <div class="form-input form-floating">
                                {{ form_widget(form.age, {'attr': {'class': 'form-control',  'placeholder':'Age'}}) }}
                                   <label for="patient_age">Age</label>
                                <div class="form-error fst-italic">
                                    {{ form_errors(form.age) }}
                                </div>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="form-input form-floating">
                                {{ form_widget(form.sex, {'attr': {'class': 'form-control',  'placeholder':'Sex'}}) }}
                                   <label for="patient_sex">Sex</label>
                                <div class="form-error fslit">
                                    {{ form_errors(form.sex) }}
                                </div>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="form-input form-floating">
                                {{ form_widget(form.lit, {'attr': {'class': 'form-control',  'placeholder':'Lit'}}) }}
                                   <label for="patient_lit">Lit</label>
                                <div class="form-error fst-italic">
                                    {{ form_errors(form.lit) }}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-input form-floating">
                        {{ form_widget(form.locale, {'attr': {'class': '',  'placeholder':'DateAdmin'}}) }}
                        <label for="patient_locale">locale</label>
                        <div class="form-error fst-italic">
                            {{ form_errors(form.locale) }}
                        </div>
                    </div>
                    <div class="">
                        <label for="patient_dateAdmin_month">Date d'admission</label>
                        {{ form_widget(form.dateAdmin, {'attr': {'class': '',  'placeholder':'DateAdmin'}}) }}
                        <div class="form-error fst-italic">
                            {{ form_errors(form.dateAdmin) }}
                        </div>
                    </div>
                    <div class="form-input">
                        <label for="patient_diagnotic">Diagnotic</label>
                        {{ form_widget(form.diagnotic, {'attr': {'class': 'form-control',  'placeholder':'Diagnotic', 'rows':'3'}}) }}
                        <div class="form-error fst-italic">
                            {{ form_errors(form.diagnotic) }}
                        </div>
                    </div>
                    <div class="form-input">
                        <label for="patient_traitement">Traitement</label>
                        {{ form_widget(form.traitement, {'attr': {'class': 'form-control',  'placeholder':'Traitement', 'rows':'3'}}) }}
                        <div class="form-error fst-italic">
                            {{ form_errors(form.traitement) }}
                        </div>
                    </div>
                    <div class="form-input">
                        <label for="patient_observation">Observation</label>
                        {{ form_widget(form.observation, {'attr': {'class': 'form-control',  'placeholder':'Observation', 'rows':'3'}}) }}
                        <div class="form-error fst-italic">
                            {{ form_errors(form.observation) }}
                        </div>
                    </div>
                    <div class="d-grid gap-2 col-6 mx-auto">
                        <button class="btn btn-primary">{{ button_label|default('Enregistrer2') }}</button>
                    </div>
                    <div class="text-center mt-3"> <span>Or continue with these social profile</span>
                        {% block button %}{% endblock %}
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
